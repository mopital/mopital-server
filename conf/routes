# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index(any = "none")
GET         /apiList                      controllers.Application.api()


#Patient Controller
POST        /api/add/patient              controllers.PatientController.addPatient
GET         /api/allPatients              controllers.PatientController.allPatients
GET         /api/beacon/get/patient/:uuid controllers.PatientController.getPatientByBeaconNumber(uuid: String)


#Beacon Controller
POST        /api/add/beacon               controllers.BeaconController.add
GET         /api/allBeacons               controllers.BeaconController.getAll



#Bed Controller
POST        /api/add/bed                  controllers.BedController.add
POST        /api/set/bed/beacon           controllers.BedController.setBeaconToBed
GET         /api/allBeds                  controllers.BedController.getAll



GET         /views/*any                   controllers.Application.loadPublicHTML(any)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
GET         /*any                         controllers.Application.index(any)
