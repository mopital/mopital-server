# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index(any = "none")


#Patient Controller
GET         /api/add/patient/:name        controllers.PatientController.addPatient(name: String)
GET         /api/allPatients              controllers.PatientController.allPatients


#Beacon Controller
POST        /api/add/beacon               controllers.BeaconController.add
GET         /api/allBeacons               controllers.BeaconController.getAll



#Bed Controller
POST        /api/add/bed                  controllers.BeaconController.add
GET         /api/allBeds                  controllers.BeaconController.getAll



GET         /views/*any                   controllers.Application.loadPublicHTML(any)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
GET         /*any                         controllers.Application.index(any)
